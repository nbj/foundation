{
    "name": "nbj/foundation",
    "description": "A light MVC framework for learning how a framework could be built",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "nbj/strings": "*",
        "nbj/collections": "*",
        "nbj/config": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "friendsofphp/php-cs-fixer": "*",
        "mikey179/vfsStream": "*"
    },
    "autoload": {
        "psr-4": {
            "Nbj\\": "src/"
        },
        "files": [
            "helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
